{
    "name": "sanity/sanity-php",
    "description": "PHP library for the Sanity API",
    "type": "library",
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "Sanity\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sanity\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sanity.io",
            "email": "hello@sanity.io"
        }
    ],
    "config": {
        "sort-packages": true
    }
}
